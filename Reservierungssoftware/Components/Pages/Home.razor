@page "/"
@rendermode InteractiveServer
@inject NavigationManager NavigationManager

<PageTitle>Home</PageTitle>
<div class="content-center">

	<button class="button" @onclick="() => NavigateToAddCustomer()"><span>Kunden erstellen</span></button>
	<button class="button" @onclick="() => NavigateToCustomers()"><span>Kundenübersicht</span></button>
	<button class="button" @onclick="() => NavigateToAddOrder()"><span>Reservierung erstellen</span></button>

</div>
@code{

	private void NavigateToCustomers()
	{
		NavigationManager.NavigateTo("/customers");
	}

	private void NavigateToAddCustomer()
	{
		NavigationManager.NavigateTo("/add-customer");
	}

	private void NavigateToAddOrder()
	{
		NavigationManager.NavigateTo("/add-order");
	}
}
